<Page x:Class="Yusupov41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yusupov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Left" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Вы авторизованы как " Height="30" Margin="10" FontSize="15"/>
                <TextBlock Width="350" Height="30" Margin="10" FontSize="15" Name="FIOTB" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0">
                <TextBlock Text="Роль:  " Height="30" Margin="10" FontSize="15"/>
                <TextBlock Width="200" Height="30" Margin="10" FontSize="15" Name="RoleTB" HorizontalAlignment="Left"/>
            </StackPanel>
        </StackPanel>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите название для поиска " TextAlignment="Right"
                Width="300" FontSize="20"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged"
                Width="300" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
                <TextBlock Text=" фильтрация по скидке " TextAlignment="Right"
                Width="300" FontSize="20"></TextBlock>
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged"
               FontSize="15" Width="200">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>от 0 до 9,99%</TextBlock>
                    <TextBlock>от 10 до 14,99%</TextBlock>
                    <TextBlock>от 15 и более</TextBlock>
                </ComboBox>
            </StackPanel>
        </WrapPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
            <RadioButton Content="По возрастанию стоимости" GroupName="Sort"
              Width="300" FontSize="20" Checked="RButtonUp_Checked"
              Name="RButtonUp"></RadioButton>
            <RadioButton Content="По убыванию стоимости" GroupName="Sort"
              Width="300" FontSize="20" Checked="RButtonDown_Checked"
              Name="RButtonDown"></RadioButton>
        </StackPanel>
        <ListView Name="ProductListView" Grid.Row="2">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить к заказу" Click="MenuItem_Click"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="900"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="300" Grid.Column="0" Grid.RowSpan="4" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProducPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /image/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" FontSize="40"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Name="TBlockRecordCount" Grid.Row="1" HorizontalAlignment="Left" 
                   FontSize="16" Margin="10" FontWeight="Bold"
                   Text="Записей: 0 из 0"/>
        <Button Grid.Row="3" Content="Просмотреть заказ" Name="OrderBTn" 
        Click="OrderBTn_Click" HorizontalAlignment="Right" 
        Margin="10" Width="150" Visibility="Collapsed" FontSize="14"/>
    </Grid>
</Page>