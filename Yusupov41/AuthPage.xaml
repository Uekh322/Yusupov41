<Page x:Class="Yusupov41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yusupov41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Логин" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   FontSize="16"/>

        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="" Name="LoginTB"
                 Width="300"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Stretch"
                 Margin="10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Пароль" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   FontSize="16"/>

        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="" Name="PassTB"
                 Width="300"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Stretch"
                 Margin="10"/>

        <!-- Капча -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Name="CaptchaPanel" Visibility="Collapsed">
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0" Foreground="Black"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,10,0,0"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,-10,0,0"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Foreground="Black" Margin="10,5,0,0"></TextBlock>
        </StackPanel>

        <TextBox Grid.Row="3" Grid.ColumnSpan="2" 
                 Text="" Name="CaptchaTB"
                 Width="200"
                 VerticalAlignment="Center" 
                 HorizontalAlignment="Center"
                 Margin="10"
                 Visibility="Collapsed"/>

        <Button Grid.Row="4" Grid.Column="0"
                Content="Войти как гость"  Name="LoginGuestBtn"
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                Margin="10"
                Click="LoginGuestBtn_Click"/>

        <Button Grid.Row="4" Grid.Column="1" 
                Content="Войти" Name="LoginBtn"
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                Margin="10"
                Click="LoginBtn_Click"/>
    </Grid>
</Page>