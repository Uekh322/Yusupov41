<Window x:Class="Yusupov41.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yusupov41"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800" FontFamily="Comic Sans MS">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->


        <!-- Дата формирования заказа -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата формирования заказа" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Выбор даты" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="OrderDP" Text="15" Width="50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Дата доставки заказа -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата доставки заказа" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Выбор даты" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="DeliveryDateTextBox" Text="15" Width="50" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ФИО клиента -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="ФИО клиента" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="ClientTB" 
                 Margin="0,0,0,10" Height="25"/>

        <!-- Номер заказа -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Номер заказа" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="TBOrderID" 
                 Margin="0,0,0,10" Height="25"/>

        <ListView Name="ProductListView" Grid.Row="5" Grid.ColumnSpan="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="900"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="300" Grid.Column="0" Grid.RowSpan="4" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="ProducPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /image/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductCost}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="20"></TextBlock>
                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0}%}" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" FontSize="40"></TextBlock>
                        <StackPanel Grid.Column="3" Grid.RowSpan="4" Orientation="Horizontal" 
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Content="-" Name="BtnMinus" Width="30" Height="30" 
                            Click="BtnMinus_Click" Margin="5"/>

                            <TextBlock Name="QuantityText" Text="{Binding ProductQuantityInStock}" 
                               Width="40" Height="30" FontSize="16"
                               TextAlignment="Center" VerticalAlignment="Center"
                               Background="LightGray" Margin="5"/>

                            <Button Content="+" Name="BtnPlus" Width="30" Height="30" 
                            Click="BtnPlus_Click" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Пункт выдачи -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Пункт выдачи" 
                   VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="6" Grid.Column="1" Name="PickupCombo" 
                  Margin="0,0,0,10" Height="25"
                  DisplayMemberPath="PickUpPointAddress"/>

        <!-- Кнопка Сохранить -->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Content="Сохранить" 
                HorizontalAlignment="Center" Width="100" Height="30"  Name="SaveBtn"
                Click="SaveBtn_Click"/>
    </Grid>
</Window>
